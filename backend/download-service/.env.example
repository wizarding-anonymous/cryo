# Download Service - Local Development Environment

# App
APP_ENV=development
PORT=8080

# Database
DATABASE_URL=postgres://postgres:postgres@db:5432/downloads?sslmode=disable

# Redis
REDIS_ADDR=redis:6379
REDIS_PASSWORD=
REDIS_DB=0

# Library Service
LIBRARY_BASE_URL=http://library-service:3000
LIBRARY_TIMEOUT_MS=2000
LIBRARY_RETRIES=2
LIBRARY_CB_THRESHOLD=5
LIBRARY_CB_COOLDOWN_MS=10000
LIBRARY_INTERNAL_HEADER=X-Internal-Token
LIBRARY_INTERNAL_TOKEN=

# Auth & Rate Limiting
AUTH_JWT_ENABLED=true
# If secret is empty, service will trust X-User-Id header (dev only)
AUTH_JWT_SECRET=
AUTH_JWT_ISSUER=
AUTH_JWT_AUDIENCE=
RATE_LIMIT_RPS=5
RATE_LIMIT_BURST=10

# S3 Storage Configuration
S3_ENDPOINT=
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
S3_BUCKET=

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
