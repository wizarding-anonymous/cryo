# Test Environment Configuration
NODE_ENV=test
PORT=3001

# Database Configuration (SQLite in-memory for tests)
DATABASE_TYPE=sqlite
DATABASE_DATABASE=:memory:
DATABASE_SYNCHRONIZE=true
DATABASE_LOGGING=false

# Redis Configuration (Memory store for tests)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_TTL=60

# JWT Configuration
JWT_SECRET=test-jwt-secret-key-for-testing-only

# External Services (Mock URLs for testing)
LIBRARY_SERVICE_URL=http://localhost:3002
ACHIEVEMENT_SERVICE_URL=http://localhost:3003
NOTIFICATION_SERVICE_URL=http://localhost:3004
GAME_CATALOG_SERVICE_URL=http://localhost:3005

# API Configuration
API_PREFIX=api/v1
API_TITLE=Review Service API
API_DESCRIPTION=API for managing game reviews and ratings
API_VERSION=1.0.0

# CORS Configuration
CORS_ORIGIN=*