{
  "name": "api-gateway",
  "version": "0.0.1",
  "description": "API Gateway service (NestJS + TypeScript)",
  "private": true,
  "license": "UNLICENSED",
  "main": "dist/main.js",
  "scripts": {
    "build": "nest build",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:e2e:watch": "jest --config ./test/jest-e2e.json --watch",
    "test:e2e:cov": "jest --config ./test/jest-e2e.json --coverage",
    "test:integration": "jest --config ./test/jest-e2e.json --testPathPatterns=\"(gateway|caching|security|performance|error-handling|monitoring).e2e-spec.ts\"",
    "test:security": "jest --config ./test/jest-e2e.json --testPathPatterns=\"security.e2e-spec.ts\"",
    "test:performance": "jest --config ./test/jest-e2e.json --testPathPatterns=\"performance.e2e-spec.ts\"",
    "test:production-readiness": "jest --config ./test/jest-e2e.json --testPathPatterns=\"production-readiness.e2e-spec.ts\"",
    "test:monitoring": "jest --config ./test/jest-e2e.json --testPathPatterns=\"monitoring.e2e-spec.ts\"",
    "perf:smoke": "artillery run perf/smoke.yml -o perf/results/smoke.json && artillery report -o perf/results/smoke.html perf/results/smoke.json",
    "perf:load": "artillery run perf/load.yml -o perf/results/load.json && artillery report -o perf/results/load.html perf/results/load.json",
    "perf:stress": "artillery run perf/stress.yml -o perf/results/stress.json && artillery report -o perf/results/stress.html perf/results/stress.json",
    "perf:mvp": "artillery run perf/mvp-load.yml -o perf/results/mvp-load.json && artillery report -o perf/results/mvp-load.html perf/results/mvp-load.json",
    "perf:stability": "artillery run perf/stability.yml -o perf/results/stability.json && artillery report -o perf/results/stability.html perf/results/stability.json",
    "perf:mvp-all": "powershell -ExecutionPolicy Bypass -File perf/run-mvp-tests.ps1",
    "perf:mvp-quick": "powershell -ExecutionPolicy Bypass -File perf/run-mvp-tests.ps1 -SkipStability",
    "perf:validate": "powershell -ExecutionPolicy Bypass -File perf/validate-setup.ps1",
    "perf:test-setup": "powershell -ExecutionPolicy Bypass -File perf/test-setup.ps1",
    "docker:build": "docker build -t api-gateway .",
    "docker:dev": "docker-compose up -d",
    "docker:dev:build": "docker-compose up -d --build",
    "docker:dev:stop": "docker-compose down",
    "docker:dev:logs": "docker-compose logs -f",
    "docker:dev:health": "powershell -ExecutionPolicy Bypass -File docker-dev.ps1 -Command health",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up -d",
    "docker:prod:build": "docker-compose -f docker-compose.prod.yml up -d --build",
    "docker:prod:stop": "docker-compose -f docker-compose.prod.yml down",
    "docker:clean": "docker-compose down -v --remove-orphans && docker system prune -f"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/terminus": "^11.0.0",
    "axios": "^1.7.9",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "dotenv": "^17.2.2",
    "ioredis": "^5.7.0",
    "joi": "^18.0.1",
    "nest-winston": "^1.10.2",
    "prom-client": "^15.1.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@types/cookiejar": "^2.1.5",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/methods": "^1.1.4",
    "@types/node": "^22.18.1",
    "@types/superagent": "^8.1.9",
    "@types/supertest": "^6.0.3",
    "artillery": "^2.0.0",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^30.0.0",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}