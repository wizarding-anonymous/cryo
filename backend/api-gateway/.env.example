NODE_ENV=development
PORT=3001

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=cryo:gateway:

# Default service timeouts / retries
SERVICE_DEFAULT_TIMEOUT_MS=5000
SERVICE_DEFAULT_RETRIES=1

# Service base URLs (adjust per environment)
SERVICE_USER_BASE_URL=http://localhost:3000
SERVICE_GAME_CATALOG_BASE_URL=http://localhost:3002
SERVICE_PAYMENT_BASE_URL=http://localhost:3003
SERVICE_LIBRARY_BASE_URL=http://localhost:3004
SERVICE_NOTIFICATION_BASE_URL=http://localhost:3005
SERVICE_REVIEW_BASE_URL=http://localhost:3006
SERVICE_ACHIEVEMENT_BASE_URL=http://localhost:3007
SERVICE_SECURITY_BASE_URL=http://localhost:3008
SERVICE_SOCIAL_BASE_URL=http://localhost:3009
SERVICE_DOWNLOAD_BASE_URL=http://localhost:3010

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=60
RATE_LIMIT_SKIP_SUCCESS=false
RATE_LIMIT_SKIP_FAILED=false

# Response Caching Configuration
CACHE_ENABLED=true
CACHE_TTL_MS=30000

# CORS Configuration
CORS_ENABLED=true
CORS_ORIGIN=*
CORS_METHODS=GET,HEAD,PUT,PATCH,POST,DELETE,OPTIONS
CORS_HEADERS=Content-Type, Authorization
CORS_CREDENTIALS=true

# Logging Configuration
LOG_LEVEL=log

