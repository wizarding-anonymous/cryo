# Application Configuration
NODE_ENV=development
PORT=3001
SERVICE_NAME=user-service
SERVICE_VERSION=1.0.0

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432  # 5432 for both local and Docker (shared infrastructure)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=user_service_db
POSTGRES_MAX_CONNECTIONS=10
POSTGRES_CONNECTION_TIMEOUT=30000

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379  # 6379 for both local and Docker (shared infrastructure)
REDIS_PASSWORD=  # Leave empty for local, 'redis_password' for Docker
REDIS_DB=0
REDIS_MAX_RETRIES=3
REDIS_RETRY_DELAY=1000

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-that-is-at-least-32-characters-long
JWT_EXPIRES_IN=1h
JWT_REFRESH_SECRET=your-super-secret-refresh-jwt-key-that-is-at-least-32-characters-long
JWT_REFRESH_EXPIRES_IN=7d

# Rate Limiting
THROTTLE_TTL=60000
THROTTLE_LIMIT=60

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=simple

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=5000

# Metrics Configuration
METRICS_ENABLED=true
METRICS_PORT=9090

# CORS Configuration
CORS_ORIGIN=*
CORS_METHODS=GET,HEAD,PUT,PATCH,POST,DELETE
CORS_CREDENTIALS=true

# Security Configuration
HELMET_ENABLED=true
RATE_LIMIT_ENABLED=true

# External Services (Optional)
# GAME_CATALOG_SERVICE_URL=http://localhost:3002
# NOTIFICATION_SERVICE_URL=http://localhost:3003

# Monitoring (Optional)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
# JAEGER_ENDPOINT=http://localhost:14268/api/traces