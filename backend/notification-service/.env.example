# Application Environment
NODE_ENV=development
PORT=3006

# CORS Configuration
CORS_ORIGIN=*

# JWT Secret
JWT_SECRET=your-super-secret-jwt-key-that-is-at-least-32-characters-long

# Database Configuration (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=user
DB_PASSWORD=password
DB_DATABASE=notification_db

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=
USE_REDIS_CACHE=true

# Service URLs for Integration
USER_SERVICE_URL=http://localhost:3001 # Example port for user-service

# Email Configuration for Russian Providers
# Supported providers: mailru, yandex, generic
EMAIL_PROVIDER=mailru
EMAIL_URL=https://api.mail.ru/v1/email/send
EMAIL_API_KEY=your-mailru-api-key
EMAIL_FROM=noreply@myplatform.ru

# Email Retry Configuration
EMAIL_MAX_RETRIES=3
EMAIL_RETRY_DELAY=1000

# Alternative Yandex Configuration (uncomment to use)
# EMAIL_PROVIDER=yandex
# EMAIL_URL=https://api.yandex.ru/v1/mail/send
# EMAIL_API_KEY=your-yandex-api-key
# EMAIL_FROM=noreply@myplatform.ru

# Legacy Mailer Configuration (deprecated, use EMAIL_* instead)
MAILER_URL=https://api.examplemailer.com/send
MAILER_API_KEY=your-mailer-api-key
MAILER_FROM_EMAIL=noreply@myplatform.com