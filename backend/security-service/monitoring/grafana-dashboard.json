{
  "dashboard": {
    "id": null,
    "title": "Security Service - Production Monitoring",
    "tags": ["security", "monitoring", "production"],
    "timezone": "browser",
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "Security Service Health",
        "type": "stat",
        "gridPos": { "h": 4, "w": 6, "x": 0, "y": 0 },
        "targets": [
          { "expr": "up{job=\"security-service\"}", "legendFormat": "Service Status" }
        ],
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "thresholds" },
            "thresholds": {
              "steps": [
                { "color": "red", "value": 0 },
                { "color": "green", "value": 1 }
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Active Security Alerts",
        "type": "stat",
        "gridPos": { "h": 4, "w": 6, "x": 6, "y": 0 },
        "targets": [
          { "expr": "security_active_alerts", "legendFormat": "Active Alerts" }
        ],
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "thresholds" },
            "thresholds": {
              "steps": [
                { "color": "green", "value": 0 },
                { "color": "yellow", "value": 5 },
                { "color": "red", "value": 20 }
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "title": "Security Checks Rate (5m)",
        "type": "timeseries",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 4 },
        "targets": [
          { "expr": "rate(security_checks_total[5m])", "legendFormat": "{{type}} - {{allowed}}" }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear",
              "barAlignment": 0,
              "lineWidth": 1,
              "fillOpacity": 10,
              "gradientMode": "none",
              "spanNulls": false,
              "insertNulls": false,
              "showPoints": "never",
              "pointSize": 5,
              "stacking": { "mode": "none", "group": "A" },
              "axisPlacement": "auto",
              "axisLabel": "",
              "scaleDistribution": { "type": "linear" },
              "hideFrom": { "legend": false, "tooltip": false, "vis": false },
              "thresholdsStyle": { "mode": "off" }
            },
            "color": { "mode": "palette-classic" },
            "unit": "reqps"
          }
        }
      },
      {
        "id": 4,
        "title": "Security Check Performance",
        "type": "timeseries",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 4 },
        "targets": [
          { "expr": "histogram_quantile(0.50, sum(rate(security_check_duration_seconds_bucket[5m])) by (le,type))", "legendFormat": "{{type}} p50" },
          { "expr": "histogram_quantile(0.95, sum(rate(security_check_duration_seconds_bucket[5m])) by (le,type))", "legendFormat": "{{type}} p95" },
          { "expr": "histogram_quantile(0.99, sum(rate(security_check_duration_seconds_bucket[5m])) by (le,type))", "legendFormat": "{{type}} p99" }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear",
              "lineWidth": 1,
              "fillOpacity": 10,
              "gradientMode": "none",
              "spanNulls": false,
              "insertNulls": false,
              "showPoints": "never",
              "pointSize": 5,
              "stacking": { "mode": "none", "group": "A" },
              "axisPlacement": "auto",
              "scaleDistribution": { "type": "linear" },
              "hideFrom": { "legend": false, "tooltip": false, "vis": false },
              "thresholdsStyle": { "mode": "off" }
            },
            "color": { "mode": "palette-classic" }
          }
        }
      },
      {
        "id": 5,
        "title": "High Risk Events Rate",
        "type": "timeseries",
        "gridPos": { "h": 6, "w": 8, "x": 0, "y": 12 },
        "targets": [
          { "expr": "rate(high_risk_events_total[5m])", "legendFormat": "{{type}}" }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "events/sec",
            "color": { "mode": "palette-classic" },
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear",
              "lineWidth": 2,
              "fillOpacity": 20,
              "gradientMode": "opacity",
              "spanNulls": false,
              "insertNulls": false,
              "showPoints": "never",
              "pointSize": 5,
              "stacking": { "mode": "none", "group": "A" },
              "axisPlacement": "auto",
              "scaleDistribution": { "type": "linear" },
              "hideFrom": { "legend": false, "tooltip": false, "vis": false },
              "thresholdsStyle": { "mode": "line" }
            },
            "thresholds": {
              "steps": [
                { "color": "green", "value": null },
                { "color": "yellow", "value": 1 },
                { "color": "red", "value": 5 }
              ]
            }
          }
        }
      },
      {
        "id": 6,
        "title": "IP Blocks Rate",
        "type": "timeseries",
        "gridPos": { "h": 6, "w": 8, "x": 8, "y": 12 },
        "targets": [
          { "expr": "rate(ip_blocks_total[5m])", "legendFormat": "{{reason}}" }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "blocks/sec",
            "color": { "mode": "palette-classic" },
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear",
              "lineWidth": 2,
              "fillOpacity": 20,
              "gradientMode": "opacity",
              "spanNulls": false,
              "insertNulls": false,
              "showPoints": "never",
              "pointSize": 5,
              "stacking": { "mode": "none", "group": "A" },
              "axisPlacement": "auto",
              "scaleDistribution": { "type": "linear" },
              "hideFrom": { "legend": false, "tooltip": false, "vis": false },
              "thresholdsStyle": { "mode": "off" }
            }
          }
        }
      },
      {
        "id": 7,
        "title": "Security Alerts by Severity",
        "type": "timeseries",
        "gridPos": { "h": 6, "w": 8, "x": 16, "y": 12 },
        "targets": [
          { "expr": "rate(security_alerts_total[5m])", "legendFormat": "{{severity}} - {{type}}" }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "alerts/sec",
            "color": { "mode": "palette-classic" },
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear",
              "lineWidth": 2,
              "fillOpacity": 20,
              "gradientMode": "opacity",
              "spanNulls": false,
              "insertNulls": false,
              "showPoints": "never",
              "pointSize": 5,
              "stacking": { "mode": "normal", "group": "A" },
              "axisPlacement": "auto",
              "scaleDistribution": { "type": "linear" },
              "hideFrom": { "legend": false, "tooltip": false, "vis": false },
              "thresholdsStyle": { "mode": "off" }
            }
          }
        }
      },
      {
        "id": 8,
        "title": "HTTP Request Rate",
        "type": "timeseries",
        "gridPos": { "h": 6, "w": 12, "x": 0, "y": 18 },
        "targets": [
          { "expr": "rate(http_requests_total{job=\"security-service\"}[5m])", "legendFormat": "{{method}} {{route}} - {{status_code}}" }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "color": { "mode": "palette-classic" },
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear",
              "lineWidth": 1,
              "fillOpacity": 10,
              "gradientMode": "none",
              "spanNulls": false,
              "insertNulls": false,
              "showPoints": "never",
              "pointSize": 5,
              "stacking": { "mode": "none", "group": "A" },
              "axisPlacement": "auto",
              "scaleDistribution": { "type": "linear" },
              "hideFrom": { "legend": false, "tooltip": false, "vis": false },
              "thresholdsStyle": { "mode": "off" }
            }
          }
        }
      },
      {
        "id": 9,
        "title": "Error Rate",
        "type": "timeseries",
        "gridPos": { "h": 6, "w": 12, "x": 12, "y": 18 },
        "targets": [
          { "expr": "rate(http_requests_total{job=\"security-service\",status_code=~\"4..|5..\"}[5m]) / rate(http_requests_total{job=\"security-service\"}[5m]) * 100", "legendFormat": "Error Rate %" }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "color": { "mode": "thresholds" },
            "thresholds": {
              "steps": [
                { "color": "green", "value": null },
                { "color": "yellow", "value": 1 },
                { "color": "red", "value": 5 }
              ]
            },
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear",
              "lineWidth": 2,
              "fillOpacity": 20,
              "gradientMode": "opacity",
              "spanNulls": false,
              "insertNulls": false,
              "showPoints": "never",
              "pointSize": 5,
              "stacking": { "mode": "none", "group": "A" },
              "axisPlacement": "auto",
              "scaleDistribution": { "type": "linear" },
              "hideFrom": { "legend": false, "tooltip": false, "vis": false },
              "thresholdsStyle": { "mode": "area" }
            }
          }
        }
      },
      {
        "id": 10,
        "title": "Database Connection Pool",
        "type": "timeseries",
        "gridPos": { "h": 6, "w": 8, "x": 0, "y": 24 },
        "targets": [
          { "expr": "nodejs_active_handles{job=\"security-service\"}", "legendFormat": "Active Handles" },
          { "expr": "nodejs_active_requests{job=\"security-service\"}", "legendFormat": "Active Requests" }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": { "mode": "palette-classic" },
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear",
              "lineWidth": 1,
              "fillOpacity": 10,
              "gradientMode": "none",
              "spanNulls": false,
              "insertNulls": false,
              "showPoints": "never",
              "pointSize": 5,
              "stacking": { "mode": "none", "group": "A" },
              "axisPlacement": "auto",
              "scaleDistribution": { "type": "linear" },
              "hideFrom": { "legend": false, "tooltip": false, "vis": false },
              "thresholdsStyle": { "mode": "off" }
            }
          }
        }
      },
      {
        "id": 11,
        "title": "Memory Usage",
        "type": "timeseries",
        "gridPos": { "h": 6, "w": 8, "x": 8, "y": 24 },
        "targets": [
          { "expr": "nodejs_heap_size_used_bytes{job=\"security-service\"}", "legendFormat": "Heap Used" },
          { "expr": "nodejs_heap_size_total_bytes{job=\"security-service\"}", "legendFormat": "Heap Total" },
          { "expr": "process_resident_memory_bytes{job=\"security-service\"}", "legendFormat": "RSS" }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "bytes",
            "color": { "mode": "palette-classic" },
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear",
              "lineWidth": 1,
              "fillOpacity": 10,
              "gradientMode": "none",
              "spanNulls": false,
              "insertNulls": false,
              "showPoints": "never",
              "pointSize": 5,
              "stacking": { "mode": "none", "group": "A" },
              "axisPlacement": "auto",
              "scaleDistribution": { "type": "linear" },
              "hideFrom": { "legend": false, "tooltip": false, "vis": false },
              "thresholdsStyle": { "mode": "off" }
            }
          }
        }
      },
      {
        "id": 12,
        "title": "Redis Connection Status",
        "type": "timeseries",
        "gridPos": { "h": 6, "w": 8, "x": 16, "y": 24 },
        "targets": [
          { "expr": "redis_connected_clients{job=\"redis\"}", "legendFormat": "Connected Clients" },
          { "expr": "redis_blocked_clients{job=\"redis\"}", "legendFormat": "Blocked Clients" }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": { "mode": "palette-classic" },
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear",
              "lineWidth": 1,
              "fillOpacity": 10,
              "gradientMode": "none",
              "spanNulls": false,
              "insertNulls": false,
              "showPoints": "never",
              "pointSize": 5,
              "stacking": { "mode": "none", "group": "A" },
              "axisPlacement": "auto",
              "scaleDistribution": { "type": "linear" },
              "hideFrom": { "legend": false, "tooltip": false, "vis": false },
              "thresholdsStyle": { "mode": "off" }
            }
          }
        }
      }
    ],
    "templating": {
      "list": [
        {
          "name": "instance",
          "type": "query",
          "query": "label_values(up{job=\"security-service\"}, instance)",
          "refresh": 1,
          "includeAll": true,
          "allValue": ".*"
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "name": "Deployments",
          "datasource": "Prometheus",
          "expr": "changes(up{job=\"security-service\"}[1m]) > 0",
          "titleFormat": "Deployment",
          "textFormat": "Service restarted"
        }
      ]
    }
  },
  "schemaVersion": 30,
  "version": 2
}

