{
  "title": "Payment Service Overview",
  "panels": [
    {
      "type": "graph",
      "title": "Payment Success vs Failure",
      "targets": [
        {
          "expr": "sum(rate(payments_total{status=\"COMPLETED\"}[5m]))",
          "legendFormat": "Success"
        },
        {
          "expr": "sum(rate(payments_total{status!=\"COMPLETED\"}[5m]))",
          "legendFormat": "Failures"
        }
      ]
    },
    {
      "type": "graph",
      "title": "Payment Duration P95",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(payment_duration_seconds_bucket[5m])) by (le))",
          "legendFormat": "P95"
        }
      ]
    }
  ]
}
