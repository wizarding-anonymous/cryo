# Application Configuration
NODE_ENV=development
PORT=3005
APP_URL=http://localhost:3005
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USERNAME=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DATABASE=payment_service
POSTGRES_SSL=false
POSTGRES_POOL_SIZE=10

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TTL=300

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here_make_it_long_and_secure_minimum_32_chars
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Rate Limiting Configuration
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# Mock Payment Provider URLs and Keys (for MVP testing)
SBERBANK_MOCK_URL=http://localhost:3003/mock/sberbank
SBERBANK_MOCK_API_KEY=mock_sberbank_key_12345
YANDEX_MOCK_URL=http://localhost:3003/mock/ymoney
YANDEX_MOCK_API_KEY=mock_ymoney_key_67890
TBANK_MOCK_URL=http://localhost:3003/mock/tbank
TBANK_MOCK_API_KEY=mock_tbank_key_abcde

# Payment Simulation Configuration
PAYMENT_MODE=simulation
PAYMENT_AUTO_APPROVE=true
PAYMENT_DELAY_MS=1000
PAYMENT_SUCCESS_RATE=0.95
ENABLED_PROVIDERS=sberbank,yandex,tbank

# External Services URLs
USER_SERVICE_URL=http://user-service:3001
GAME_CATALOG_SERVICE_URL=http://game-catalog-service:3002
LIBRARY_SERVICE_URL=http://library-service:3004
EVENT_BUS_URL=
PURCHASE_COMPLETED_EVENT_NAME=payment.purchase.completed
EVENT_BUS_TIMEOUT_MS=3000
SERVICE_TIMEOUT_MS=5000
RETRY_ATTEMPTS=3

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_ENABLED=true
LOG_FILE_MAX_SIZE=20m
LOG_FILE_MAX_FILES=14d

# Security Configuration
BCRYPT_ROUNDS=12
HELMET_ENABLED=true

# Monitoring Configuration
METRICS_ENABLED=true
HEALTH_CHECK_ENABLED=true
SWAGGER_ENABLED=false