# Environment: Staging
NODE_ENV=staging

# Application Configuration
PORT=3000
API_PREFIX=api/v1

# JWT Configuration
JWT_SECRET=replace_with_staging_jwt_secret
JWT_EXPIRES_IN=1h

# Database Configuration
POSTGRES_HOST=staging-db-host
POSTGRES_PORT=5432
POSTGRES_DB=game_catalog_staging
POSTGRES_USER=staging_user
POSTGRES_PASSWORD=replace_with_staging_db_password

# Redis Configuration
REDIS_HOST=staging-redis-host
REDIS_PORT=6379
REDIS_PASSWORD=replace_with_staging_redis_password

# Elasticsearch Configuration
ELASTICSEARCH_NODE=http://staging-es-host:9200
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=

# S3 Configuration
S3_ENDPOINT=https://staging.s3.amazonaws.com
S3_ACCESS_KEY=replace_with_staging_s3_access_key
S3_SECRET_KEY=replace_with_staging_s3_secret_key
S3_BUCKET=game-media-staging
S3_REGION=eu-west-1
S3_FORCE_PATH_STYLE=false

# Kafka Configuration
KAFKA_BROKERS=staging-kafka-broker1:9092,staging-kafka-broker2:9092
KAFKA_CLIENT_ID=game-catalog-service-staging
KAFKA_GROUP_ID=game-catalog-group-staging
KAFKA_RETRIES=5

# External API Configuration
STEAM_API_KEY=
EPIC_GAMES_API_KEY=

# Monitoring Configuration
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DEST=./uploads
