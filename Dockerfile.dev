FROM node:20-alpine

WORKDIR /app

# Install nest CLI globally
RUN npm install -g @nestjs/cli

# Copy package files
COPY package.json package-lock.json* ./

# Install all dependencies (including dev dependencies)
RUN npm install

# Copy source code
COPY . .

# Expose the port
EXPOSE 3000

# Start in development mode
CMD ["npx", "nest", "start", "--watch"]